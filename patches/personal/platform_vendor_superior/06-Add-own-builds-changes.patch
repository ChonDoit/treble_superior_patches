---
 config/common.mk  |  3 +++
 config/phh_gsi.mk | 48 +++++++++++++++++++++++++++++++++++++++++++++++
 2 files changed, 51 insertions(+)
 create mode 100644 config/phh_gsi.mk

diff --git a/config/common.mk b/config/common.mk
index a49019b5..e0b72954 100644
--- a/config/common.mk
+++ b/config/common.mk
@@ -14,6 +14,9 @@
 
 PRODUCT_BRAND ?= SuperiorOS
 
+# PHH GSI
+$(call inherit-product, vendor/superior/config/phh_gsi.mk)
+
 # Backup Tool
 PRODUCT_COPY_FILES += \
     vendor/superior/prebuilt/common/bin/backuptool.sh:install/bin/backuptool.sh \
diff --git a/config/phh_gsi.mk b/config/phh_gsi.mk
new file mode 100644
index 00000000..0f76020c
--- /dev/null
+++ b/config/phh_gsi.mk
@@ -0,0 +1,48 @@
+# The Gapps
+$(call inherit-product, vendor/gapps/config.mk)
+
+# Gapps Flags
+WITH_THEGAPPS := true
+WITH_TALKBACK := false
+WITH_ASSISTANT := false
+
+#
+TARGET_NO_KERNEL_OVERRIDE := true
+
+# Set Bootanimationn at 720P
+TARGET_BOOT_ANIMATION_RES := 720
+
+# Use CCache
+USE_CCACHE := true
+
+PRODUCT_PACKAGES += \
+        SuperUser
+
+PRODUCT_PACKAGES += \
+        android.hardware.bluetooth.a2dp@1.0-impl \
+        android.hardware.bluetooth.a2dp@1.0-service
+
+PRODUCT_PRODUCT_PROPERTIES += \
+        dalvik.vm.dex2oat64.enabled=true
+
+PRODUCT_SYSTEM_PROPERTIES += \
+        persist.sys.binary_xml=false \
+        bluetooth.device.class_of_device=90,2,12 \
+        persist.bluetooth.bqr.event_mask=30 \
+        persist.bluetooth.bqr.min_interval_ms=500 \
+        bluetooth.profile.a2dp.source.enabled=true \
+        bluetooth.profile.asha.central.enabled=true \
+        bluetooth.profile.avrcp.target.enabled=true \
+        bluetooth.profile.bas.client.enabled=true \
+        bluetooth.profile.gatt.enabled=true \
+        bluetooth.profile.hfp.ag.enabled=true \
+        bluetooth.profile.hid.device.enabled=true \
+        bluetooth.profile.hid.host.enabled=true \
+        bluetooth.profile.map.server.enabled=true\
+        bluetooth.profile.opp.enabled=true \
+        bluetooth.profile.pan.nap.enabled=true \
+        bluetooth.profile.pan.panu.enabled=true
+
+# APNS
+PRODUCT_COPY_FILES += \
+        vendor/superior/prebuilt/common/etc/apns-conf.xml:$(TARGET_COPY_OUT_PRODUCT)/etc/apns-conf.xml
