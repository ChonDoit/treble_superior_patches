+Error Layer::setLayerClass(uint32_t val)
+{
+    if (CC_UNLIKELY(!mDisplay)) {
+        return Error::BAD_DISPLAY;
+    }
+
+    auto intError = mComposer.setLayerClass(mDisplay->getId(), mId, val);
+    return static_cast<Error>(intError);
+}
